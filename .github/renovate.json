{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "schedule:nonOfficeHours"
    ],
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Renovate Dashboard",
    "labels": [
        "renovatebot"
    ],
    "flux": {
        "fileMatch": [
            ".+\\.ya?ml"
        ],
        "ignorePaths": [
            "clusters",
            "terraform"
        ]
    },
    "helm-values": {
        "fileMatch": [
            ".+\\.ya?ml"
        ],
        "ignorePaths": [
            "clusters",
            "terraform"
        ]
    },
    "kubernetes": {
        "fileMatch": [
            ".+\\.ya?ml"
        ],
        "ignorePaths": [
            "clusters",
            "terraform"
        ]
    }
}